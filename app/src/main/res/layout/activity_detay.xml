<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDetay"
    android:background="#7281D1">

    <TextView
        android:id="@+id/detay_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:text="Ankara"
        android:textSize="46sp"
        app:layout_constraintEnd_toStartOf="@+id/detay_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detay_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detay_txt_title"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/detay_txt_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="117dp"
        android:text="18C"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detay_txt_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="9 C"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/detay_txt_max"
        app:layout_constraintTop_toBottomOf="@+id/detay_txt_max" />
</androidx.constraintlayout.widget.ConstraintLayout>